<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baizhi.dao.UserDao">
    <sql id="all">
        select id,usersname,headimg,phone,brief,status,createdate from yx_user
    </sql>

    <!--List<User> queryAllPage(@Param("start") int start, @Param("end") int end);-->

    <select id="queryAllPage" resultType="User">
        <include refid="all"/> limit #{start},#{end}
    </select>

    <select id="selecttotalCount" resultType="int">
        select count(*) from yx_user
    </select>

    <update id="update" parameterType="User">
        update yx_user set status=#{status} where id=#{id}
    </update>

    <insert id="add" parameterType="User">
        insert into yx_user values(#{id},#{usersname},#{headimg},#{phone},#{brief},#{status},#{createdate},#{sex})
    </insert>

    <delete id="delete" parameterType="Integer">
        delete from yx_user where id=#{id}
    </delete>

    <select id="queryAll" resultType="User">
        <include refid="all"/>
    </select>

    <!-- List<MonthAndCount> queryMonthCount(String sex);-->
    <select id="queryMonthCount" parameterType="String" resultType="com.baizhi.vo.MonthAndCount">
        select month(createdate) month,count(*) count from yx_user where sex=#{sex}
        group by month(createdate)
    </select>
</mapper>